<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_weight="1"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#616161"
        android:fontFamily="monospace"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="25dp"
        android:text="Team A"
         />

    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:textSize="54dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="0"
        />


    <Button
        android:id="@+id/plus_3_point_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#ffa500"
        android:text="+3 POINTS"
        android:onClick="plusThreePointsForTeamA"
        />

    <Button
        android:id="@+id/plus_2_point_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#ffa500"
        android:text="+2 POINTS"
        android:onClick="plusTwoPointsForTeamA"
        />

    <Button
        android:id="@+id/plus_1_point_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#ffa500"
        android:text="+1 POINT"
        android:onClick="plusOnePointsForTeamA"
        />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="400dp"
        android:background="@android:color/background_dark"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_weight="1"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="25dp"
            android:textColor="#616161"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Team B"
            />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:textSize="54dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="0"
            />


        <Button
            android:id="@+id/plus_3_point_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#ffa500"
            android:text="+3 POINTS"
            android:onClick="plusThreePointsForTeamB"
            />

        <Button
            android:id="@+id/plus_2_point_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#ffa500"
            android:text="+2 POINTS"
            android:onClick="plusTwoPointsForTeamB"
            />

        <Button
            android:id="@+id/plus_1_point_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#ffa500"
            android:text="+1 POINT"
            android:onClick="plusOnePointsForTeamB"
            />
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true "
        android:layout_alignParentBottom="true"
        android:background="#ffa500"
        android:onClick="reset"
        android:layout_marginBottom="32dp"
        />
</RelativeLayout>